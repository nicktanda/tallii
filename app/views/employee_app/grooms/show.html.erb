<div class="m-4 space-y-4 text-white">
  <div class="text-3xl">Grooming Appointment</div>
  <%= form_for @groom, url: employee_app_groom_update_path do |f| %>
    <%= f.hidden_field :origin, value: "desktop"%>
    <div class="space-y-4">
      <div>
        <%= f.label :pet_id, "Pet" %>
        <%= f.hidden_field :pet_id, value: @groom.pet_id %>
        <div class="bg-black text-white border-x-0 border-t-0 w-full text-xl"><%= @groom.pet.name %></div>
      </div>
      <% if @groom.status == "completed" %>
        <div>
          <%= f.label :date, "Request Date" %>
          <%= f.hidden_field :date, value: @groom.date %>
          <div class="bg-black text-white border-x-0 border-t-0 w-full text-xl"><%= @groom.date %>
        </div>
      <% else %>
        <div>
          <div class="flex">
            <%= f.label :date, "Request Date" %>
            <div class="text-red-500">*</div>
          </div>
          <%= f.date_field :date, required: true, class: "bg-black text-white border-x-0 border-t-0 w-full text-xl" %>
        </div>
      <% end %>
      <div>
        <div class="flex">
          <%= f.label :start_time, "Request Time" %>
          <div class="text-red-500">*</div>
        </div>
        <%= f.time_field :start_time, required: true, class: "bg-black text-white border-x-0 border-t-0 w-full text-xl" %>
      </div>
      <div>
        <%= f.label :last_groom, "When Was Last Groom?" %>
        <%= f.date_field :last_groom, class: "bg-black text-white border-x-0 border-t-0 w-full text-xl" %>
      </div>
      <div>
        <%= f.label :notes, "Additional Grooming Notes" %>
        <%= f.text_area :notes, class: "bg-black text-white border-x-0 border-t-0 w-full text-xl", rows: 3, placeholder: "Write any notes here" %>
      </div>
      <% unless @groom.status == "completed" %>
        <div>
          <div class="flex">
            <%= f.label :status, "Status" %>
            <div class="text-red-500">*</div>
          </div>
          <%= f.select(:status, options_for_select([["Pending", "pending"], ["Confirmed", "confirmed"], ["In Progress", "in_progress"], ["Completed", "completed"], ["Missed Appointment", "missed_appointment"]], selected: @groom.status), { prompt: 'Select' }, { required: true, class: "bg-black text-white border-x-0 border-t-0 w-full text-xl" }) %>
        </div>
      <% end %>
      <button type="submit" class="bg-blue-800 w-full text-white font-bold p-4 rounded-lg flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
        </svg>
        Update Request
      </button>
      <%= link_to employee_app_groom_images_path(@groom) do %>
        <div class="bg-blue-800 w-full text-white font-bold p-4 rounded-lg flex items-center justify-center mt-4 space-x-4">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
          </svg>
          <div>Images</div>
        </div>
      <% end %>
      <%= link_to employee_app_grooms_path do %>
        <div class="bg-white w-full text-black font-bold p-4 rounded-lg flex items-center justify-center mt-4 space-x-4">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          <div>Cancel</div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>