<div class="w-full p-4 space-y-4 overflow-y-scroll h-[85vh]">
  <div class="flex justify-between">
    <div class="flex space-x-4">
      <%= link_to desktop_user_path(@pet.user) do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 9-3 3m0 0 3 3m-3-3h7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
        </svg>
      <% end %>
      <div class="font-bold text-2xl"><%= @pet.name %>'s Details</div>
    </div>
    <%= link_to desktop_pets_pictures_path(@pet) do %>
      <div class="flex space-x-2 p-2 bg-blue-400 text-white rounded-lg">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
        </svg>
        <div>Photos</div>
      </div>
    <% end %>
  </div>
  <%= form_for @pet, url: desktop_pets_update_path do |f| %>
    <div class="space-y-4">
      <div>
        <%= f.label "User" %>
        <%= f.text_field :user_name, value: @pet.user.full_name, readonly: true, required: true, class: "bg-white text-black border-x-0 border-t-0 w-full text-xl rounded-lg p-4" %>
      </div>
      <div>
        <%= f.label :name, class: "mb-2" %>
        <%= f.text_field :name, required: true, class: "bg-white text-black border-x-0 border-t-0 w-full rounded-lg p-4" %>
      </div>
      <div>
        <%= f.label :species, class: "mb-2" %>
        <div>
          <%= f.radio_button :species, :dog, id: "species_dog", required: true %>
          <%= f.label :dog, for: "species_dog" %>
        </div>

        <div>
          <%= f.radio_button :species, :cat, id: "species_cat", required: true %>
          <%= f.label :cat, for: "species_cat" %>
        </div>
      </div>
      <div>
        <%= f.label :gender, class: "text-xl mb-2" %>
        <div>
          <%= f.radio_button :gender, :male, id: "gender_male", required: true %>
          <%= f.label :male, for: "gender_male" %>
        </div>

        <div>
          <%= f.radio_button :gender, :female, id: "gender_female", required: true %>
          <%= f.label :female, for: "gender_female" %>
        </div>
      </div>
      <div>
        <%= f.label :dob, "Birthday" %>
        <%= f.date_field :dob, required: true, class: "bg-white text-black border-x-0 border-t-0 w-full rounded-lg p-4" %>
      </div>
      <div>
        <%= f.label :weight %>
        <%= f.number_field :weight, required: true, step: 0, class: "bg-white text-black border-x-0 border-t-0 w-full rounded-lg p-4" %>
      </div>
      <div>
        <%= f.label :breed %>
        <%= f.text_field :breed, required: true, class: "bg-white text-black border-x-0 border-t-0 w-full rounded-lg p-4" %>
      </div>
      <div>
        <%= f.label :health_conditions, "Health" %>
        <%= f.text_area :health_conditions, class: "bg-white text-black border-x-0 border-t-0 w-full rounded-lg p-4" %>
      </div>
      <div>
        <%= f.label :notes %>
        <%= f.text_area :notes, class: "bg-white text-black border-x-0 border-t-0 w-full rounded-lg p-4" %>
      </div>
      <div>
        <%= f.label :date_of_death, "Date Of Death" %>
        <%= f.date_field :date_of_death, required: true, class: "bg-white text-black border-x-0 border-t-0 w-full rounded-lg p-4" %>
      </div>
      <button type="submit" class="bg-blue-800 w-full text-white font-bold p-4 rounded-lg flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
        </svg>
        Update Pet
      </button>
    </div>
  <% end %>
  <%= button_to desktop_pets_delete_path(@pet), method: :delete, class: "bg-red-600 w-full text-white font-bold p-4 rounded-lg flex items-center justify-center" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
      <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
    </svg>
    Delete
  <% end %>
  <%= link_to desktop_user_path(@pet.user), class: "bg-white w-full border font-bold p-4 rounded-lg flex items-center justify-center" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
      <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
    </svg>
    Cancel
  <% end %>
</div>