<div>
  <div class="w-full flex space-x-4">
    <div class="w-full bg-white border border-gray-200 rounded-lg">
      <div class="w-full p-4">
        <div class="font-bold">Grooming Appointments</div>
      </div>
      <div class="max-h-80 overflow-y-scroll pb-4">
        <% @grooms.each do |date, grooms|%>
          <details class="mb-2" <%= date == Time.zone.today ? "open" : "" %>>
            <summary class="bg-white font-bold p-4 rounded-lg">
              <%= date.strftime("%B %e") %>
            </summary>
            <div class="overflow-hidden rounded-lg">
              <div class="max-h-40 overflow-y-scroll">
                <table class="w-full">
                  <thead>
                    <tr class="bg-gray-300 text-left sticky top-0">
                      <th class="p-2">Pet</th>
                      <th class="p-2">Time In</th>
                      <th class="p-2">Status</th>
                      <th class="p-2">Additional</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% grooms.each do |groom| %>
                      <tr class="bg-gray-50 text-left">
                        <td class="p-2">
                          <div class="font-bold">
                            <%= groom.pet.name %>
                          </div>
                          <div class="text-xs">
                            <%= groom.pet.user.full_name %>
                          </div>
                        </td>
                        <td class="p-2"><%= groom.time.strftime("%I:%M%P") %></td>
                        <td class="p-2"><%= groom.status.capitalize %></td>
                        <td class="flex space-x-4 p-4">
                          <%= link_to desktop_groom_path(groom) do %>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                            </svg>
                          <% end %>
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6a2.25 2.25 0 0 0-2.25 2.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15M12 9l-3 3m0 0 3 3m-3-3h12.75" />
                          </svg>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </details>
        <% end %>
      </div>
    </div>
    <div class="w-full bg-white border border-gray-200 rounded-lg">
      <div class="w-full p-4">
        <div class="font-bold">Currently Checked In</div>
      </div>
      <div class="overflow-hidden rounded-lg">
        <div class="max-h-40 overflow-y-scroll">
          <table class="w-full">
            <thead>
              <tr class="bg-gray-300 text-left sticky top-0">
                <th class="p-2">Pet</th>
                <th class="p-2">Time In</th>
                <th class="p-2">Additional</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @in_progress_grooms.each do |groom| %>
                <tr class="bg-gray-50 text-left">
                  <td class="p-2">
                    <div class="font-bold">
                      <%= groom.pet.name %>
                    </div>
                    <div class="text-xs">
                      <%= groom.pet.user.full_name %>
                    </div>
                  </td>
                  <td class="p-2"><%= groom.time.strftime("%I:%M%P") %></td>
                  <td class="flex space-x-4 p-4">
                    <%= link_to desktop_groom_path(groom) do %>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                      </svg>
                    <% end %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6a2.25 2.25 0 0 0-2.25 2.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15M12 9l-3 3m0 0 3 3m-3-3h12.75" />
                    </svg>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="w-full bg-white border border-gray-200 rounded-lg">
      <div class="w-full p-4">
        <div class="font-bold">Completed Grooms</div>
      </div>
      <div class="overflow-hidden rounded-lg">
        <div class="max-h-40 overflow-y-scroll">
          <table class="w-full">
            <thead>
              <tr class="bg-gray-300 text-left sticky top-0">
                <th class="p-2">Pet</th>
                <th class="p-2">Time In</th>
                <th class="p-2">Additional</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @completed_grooms.each do |groom| %>
                <tr class="bg-gray-50 text-left">
                  <td class="p-2">
                    <div class="font-bold">
                      <%= groom.pet.name %>
                    </div>
                    <div class="text-xs">
                      <%= groom.pet.user.full_name %>
                    </div>
                  </td>
                  <td class="p-2"><%= groom.time.strftime("%I:%M%P") %></td>
                  <td class="flex space-x-4 p-4">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                    </svg>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6a2.25 2.25 0 0 0-2.25 2.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15M12 9l-3 3m0 0 3 3m-3-3h12.75" />
                    </svg>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>