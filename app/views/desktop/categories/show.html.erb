<% flash.each do |type, msg| %>
  <div class="text-red-500 border-red-500 w-full p-2 border-2 rounded-lg">
    <%= msg %>
  </div>
<% end %>
<div class="w-full p-4 space-y-4 overflow-y-scroll h-[85vh]">
  <div class="flex space-x-4">
    <div class="w-full">
      <div class="flex space-x-4">
        <div class="font-bold text-4xl"><%= @category.name %></div>
        <%= link_to desktop_category_edit_path(@category) do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
        <% end %>
      </div>
      <div class="w-full overflow-y-scroll h-full space-y-4">
        <div class="mt-4">
          <div class="text-lg font-bold">Description</div>
          <div class="w-4/5"><%= @category.description %></div>
        </div>
        <% if @category.products.any? %>
          <div>
            <div class="text-lg font-bold">Products</div>
            <% @category.products.each do |product| %>
              <%= link_to desktop_product_path(product) do %>
                <div class="underline"><%= product.name %></div>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="w-full overflow-y-scroll h-full space-y-4">
      <% @category.images.each do |image| %>
        <img src="<%= url_for(image.image) %>" alt="<%= @category.name %>" class="w-full h-[50vh] bg-blue-300">
      <% end %>
    </div>
  </div>
</div>