<div class="bg-white flex w-full h-[85vh]">
  <div class="w-[30vw] bg-gray-200 p-4">
    <div class="font-bold text-xl">Customers</div>
    <div class="space-y-4 py-4">
      <% @users.each do |user| %>
        <% if @user == user %>
          <%= link_to desktop_user_path(user) do %>
            <div class="bg-white p-2 rounded-lg flex items-center space-x-4">
              <% if user.images&.order(:created_at)&.first&.image.present? %>
                <img src="<%= url_for(user.images.order(:created_at).first.image) %>" alt="<%= user.first_name %>" class="bg-green-500 rounded-2xl max-h-8 max-w-8">
              <% end %>
              <span><%= user.full_name %></span>
            </div>
          <% end %>
        <% else %>
          <%= link_to desktop_user_path(user) do %>
            <div class="hover:bg-white p-2 rounded-lg flex items-center space-x-4">
              <% if user.images&.order(:created_at)&.first&.image.present? %>
                <img src="<%= url_for(user.images.order(:created_at).first.image) %>" alt="<%= user.first_name %>" class="bg-green-500 rounded-full max-h-8 max-w-8">
              <% end %>
              <span><%= user.full_name %></span>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="w-full p-4 space-y-4 overflow-y-scroll">
    <div class="flex justify-between">
      <div class="flex space-x-4">
        <% if @user.images&.order(:created_at)&.first&.image.present? %>
          <img src="<%= url_for(@user.images.order(:created_at).first.image) %>" alt="<%= @user.first_name %>" class="bg-green-500 rounded-full max-h-28 max-w-28">
        <% end %>
        <div class="space-y-2">
          <div class="text-4xl font-bold"><%= @user.full_name %></div>
          <div class="flex space-x-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
            </svg>
            <div class="font-light"><%= @user.email %></div>
          </div>
          <% if @user.phone.present? %>
            <div class="flex space-x-4">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
              </svg>
              <div class="font-light"><%= @user.phone %></div>
            </div>
          <% end %>
        </div>
      </div>
      <%= link_to desktop_user_edit_path(@user) do %>
        <div class="text-white bg-blue-400 rounded-lg p-2 flex space-x-1">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
          <div>Edit</div>
        </div>
      <% end %>
    </div>
    <% if @user.address.present? && @user.postcode.present? && @user.city.present? %>
      <div>
        <div class="flex space-x-1 mb-1">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
          </svg>
          <div class="font-bold">Address</div>
        </div>
        <div class="font-light"><%= @user.address %></div>
        <div class="font-light"><%= @user.postcode %></div>
        <div class="font-light"><%= @user.city %></div>
      </div>
    <% end %>
    <hr class="border-black"></hr>
    <div>
      <div class="flex justify-between">
        <div class="text-3xl font-bold mb-2">Pets</div>
        <%= link_to desktop_pets_new_path(@user) do %>
          <div class="bg-gray-200 p-2 rounded-lg">+ Add New Pet</div>
        <% end %>
      </div>
      <% if @user.pets.any? %>
        <div class="flex overflow-x-scroll">
          <% @user.pets.each do |pet| %>
            <div class="flex space-x-4">
              <img src="<%= url_for(pet&.images&.first&.image) %>" alt="<%= pet.name %>" class="bg-green-500 rounded-full h-20 w-20">
              <div>
                <div class="font-bold text-xl"><%= pet.name %></div>
                <div class="font-light text-xs"><%= pet.gender.capitalize %></div>
                <div class="font-light text-xs"><%= pet.breed.capitalize %></div>
                <div class="font-light text-xs"><%= pet.age %> years old</div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <% if @bookings.any? %>
      <hr class="border-black"></hr>
      <div>
        <div class="text-3xl font-bold mb-2">Bookings</div>
        <div class="overflow-hidden rounded-lg">
          <div class="max-h-40 overflow-y-scroll">
            <table class="w-full">
              <thead>
                <tr class="bg-gray-300 text-left sticky top-0">
                  <th class="p-2">Pet</th>
                  <th class="p-2">Date</th>
                  <th class="p-2">Time</th>
                  <th class="p-2">Status</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @bookings.each do |booking| %>
                  <tr class="bg-gray-50 text-left">
                    <td class="p-2"><%= booking[:pet] %></td>
                    <td class="p-2"><%= booking[:date].strftime("%B %e, %Y") %></td>
                    <td class="p-2"><%= booking[:time].strftime("%I:%M%P") %></td>
                    <td class="p-2"><%= booking[:status].capitalize %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>