<div class="bg-white flex w-full h-[85vh]">
  <div class="w-[30vw] bg-gray-200 p-4">
    <div class="font-bold text-xl">Customers</div>
    <div class="space-y-4 py-4">
      <% @users.each do |user| %>
        <% if @user == user %>
          <%= link_to desktop_user_path(user) do %>
            <div class="bg-white p-2 rounded-lg flex items-center space-x-4">
              <% if user.images&.order(:created_at)&.first&.image.present? %>
                <img src="<%= url_for(user.images.order(:created_at).first.image) %>" alt="<%= user.first_name %>" class="bg-green-500 rounded-2xl max-h-8 max-w-8">
              <% end %>
              <span><%= user.full_name %></span>
            </div>
          <% end %>
        <% else %>
          <%= link_to desktop_user_path(user) do %>
            <div class="hover:bg-white p-2 rounded-lg flex items-center space-x-4">
              <% if user.images&.order(:created_at)&.first&.image.present? %>
                <img src="<%= url_for(user.images.order(:created_at).first.image) %>" alt="<%= user.first_name %>" class="bg-green-500 rounded-full max-h-8 max-w-8">
              <% end %>
              <span><%= user.full_name %></span>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="w-full p-4 space-y-4 overflow-y-scroll">
    <div class="font-bold text-4xl"><%= @user.full_name %></div>
    <%= form_for @user, url: desktop_user_update_path(@user), method: :patch do |f| %>
      <%= f.hidden_field :id %>
      <div class="space-y-4">
        <div class="text-xl w-full border-l-0 border-r-0 border p-2">Personal Details</div>
        <div>
          <%= f.label :first_name %>
          <%= f.text_field :first_name, required: true, class: "border w-full rounded-lg p-2" %>
        </div>
        <div>
          <%= f.label :last_name %>
          <%= f.text_field :last_name, required: true, class: "border w-full rounded-lg p-2" %>
        </div>
        <div>
          <%= f.label :email %>
          <%= f.email_field :email, required: true, class: "border w-full rounded-lg p-2" %>
        </div>
        <div>
          <%= f.label :phone %>
          <%= f.telephone_field :phone, required: true, class: "border w-full rounded-lg p-2" %>
        </div>
        <div>
          <%= f.label :weight %>
          <%= f.number_field :weight, required: true, class: "border w-full rounded-lg p-2" %>
        </div>
        <div class="text-xl w-full border-l-0 border-r-0 border p-2">Living Details</div>
        <div>
          <%= f.label :address %>
          <%= f.text_field :address, required: true, class: "border w-full rounded-lg p-2" %>
        </div>
        <div>
          <%= f.label :city %>
          <%= f.text_field :city, required: true, class: "border w-full rounded-lg p-2" %>
        </div>
        <div>
          <%= f.label :postcode %>
          <%= f.text_field :postcode, required: true, class: "border w-full rounded-lg p-2" %>
        </div>
        <div class="text-xl w-full border-l-0 border-r-0 border p-2">Profile Pictures</div>
        <div class="w-full mb-4">
          <%= f.file_field :image, accept: "image/jpeg, image/png", class: "block w-full border border-gray-300 rounded-lg cursor-pointer" %>
        </div>
        <button type="submit" class="bg-blue-800 w-full text-white font-bold p-4 rounded-lg flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          Update Details
        </button>
      </div>
    <% end %>
    <%= button_to desktop_user_delete_path(@user), method: :delete, class: "bg-red-600 w-full text-white font-bold p-4 rounded-lg flex items-center justify-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
        <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
      </svg>
      Delete
    <% end %>
    <%= link_to desktop_user_path(@user), class: "bg-white w-full border font-bold p-4 rounded-lg flex items-center justify-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
        <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
      </svg>
      Cancel
    <% end %>
  </div>
</div>