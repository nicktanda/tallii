<div class="bg-white flex w-full h-[85vh]">
  <div class="w-[30vw] bg-gray-200 p-4">
    <div class="font-bold text-xl">Customers</div>
    <div class="space-y-4 py-4">
      <% @users.each do |user| %>
        <% if @user == user %>
          <%= link_to desktop_user_path(user) do %>
            <div class="bg-white p-2 rounded-lg flex items-center space-x-4">
              <% if user.images&.order(:created_at)&.first&.image.present? %>
                <img src="<%= url_for(user.images.order(:created_at).first.image) %>" alt="<%= user.first_name %>" class="rounded-2xl max-h-8 max-w-8">
              <% end %>
              <span><%= user.full_name %></span>
            </div>
          <% end %>
        <% else %>
          <%= link_to desktop_user_path(user) do %>
            <div class="hover:bg-white p-2 rounded-lg flex items-center space-x-4">
              <% if user.images&.order(:created_at)&.first&.image.present? %>
                <img src="<%= url_for(user.images.order(:created_at).first.image) %>" alt="<%= user.first_name %>" class="rounded-full max-h-8 max-w-8">
              <% end %>
              <span><%= user.full_name %></span>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="w-full p-4 space-y-4 overflow-y-scroll">
    <div class="flex justify-between">
      <div class="flex space-x-4">
        <% if @user.images&.order(:created_at)&.first&.image.present? %>
          <img src="<%= url_for(@user.images.order(:created_at).first.image) %>" alt="<%= @user.first_name %>" class="rounded-full max-h-28 max-w-28">
        <% end %>
        <div class="space-y-2">
          <div class="text-4xl font-bold"><%= @user.full_name %></div>
          <div class="flex space-x-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
            </svg>
            <div class="font-light"><%= @user.email %></div>
          </div>
          <% if @user.phone.present? %>
            <div class="flex space-x-4">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
              </svg>
              <div class="font-light"><%= @user.phone %></div>
            </div>
          <% end %>
          <div class="flex space-x-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" />
            </svg>
            <div class="font-light"><%= @user.rewards_points %></div>
          </div>
        </div>
      </div>
      <%= link_to desktop_user_edit_path(@user) do %>
        <div class="text-white bg-blue-400 rounded-lg p-2 flex space-x-1">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
          <div>Edit</div>
        </div>
      <% end %>
    </div>
    <% if @user.address.present? && @user.postcode.present? && @user.city.present? %>
      <div>
        <div class="flex space-x-1 mb-1">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
          </svg>
          <div class="font-bold">Address</div>
        </div>
        <div class="font-light"><%= @user.address %></div>
        <div class="font-light"><%= @user.postcode %></div>
        <div class="font-light"><%= @user.city %></div>
      </div>
    <% end %>
    <hr class="border-black"></hr>
    <div class="w-full">
      <div class="flex justify-between mb-2">
        <div class="text-3xl font-bold mb-2">Pets</div>
        <%= link_to desktop_pets_new_path(@user) do %>
          <div class="bg-gray-200 p-2 rounded-lg">+ Add New Pet</div>
        <% end %>
      </div>
      <% if @user.pets.alive.any? %>
        <div class="flex overflow-x-auto space-x-4 py-4 w-[54vw]">
          <% @user.pets.each do |pet| %>
            <div class="min-w-[12rem] p-2 bg-white rounded-lg">
              <div class="flex space-x-2">
                <img src="<%= url_for(pet&.images&.first&.image) %>" alt="<%= pet.name %>" class="rounded-full h-20 w-20">
                <div>
                  <%= link_to desktop_pets_path(pet) do %>
                    <div class="font-bold text-xl"><%= pet.name %></div>
                  <% end %>
                  <div class="font-light text-xs"><%= pet.gender.capitalize %></div>
                  <div class="font-light text-xs"><%= pet.breed.capitalize %></div>
                  <div class="font-light text-xs"><%= pet.age %> years old</div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <hr class="border-black"></hr>
    <div>
      <div class="flex justify-between mb-2">
        <div class="text-3xl font-bold mb-2">Bookings</div>
        <div class="flex space-x-2">
          <% if @user.pets.any? %>
            <%= link_to desktop_daycare_visits_new_path do %>
              <div class="bg-gray-200 p-2 rounded-lg">+ Add New Booking</div>
            <% end %>
          <% end %>
          <%= link_to desktop_user_booking_settings_edit_path do %>
            <div class="flex space-x-2 bg-gray-200 p-2 rounded-lg">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 0 1 0-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
              </svg>
              <div>Booking Settings</div>
            </div>
          <% end %>
        </div>
      </div>
      <% if @bookings.present? && @bookings.any? %>
        <div class="overflow-hidden rounded-lg">
          <div class="max-h-40 overflow-y-scroll">
            <table class="w-full">
              <thead>
                <tr class="bg-gray-300 text-left sticky top-0">
                  <th class="p-2">Pet</th>
                  <th class="p-2">Date</th>
                  <th class="p-2">Time</th>
                  <th class="p-2">Status</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @bookings.each do |booking| %>
                  <tr class="bg-gray-50 text-left">
                    <td class="p-2"><%= booking[:pet] %></td>
                    <td class="p-2"><%= booking[:date].strftime("%B %e, %Y") %></td>
                    <td class="p-2"><%= booking[:time].strftime("%I:%M%P") %></td>
                    <td class="p-2"><%= booking[:status].capitalize %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
    </div>
    <hr class="border-black"></hr>
    <div>
      <div class="flex justify-between mb-2">
        <div class="text-3xl font-bold mb-2">Notes</div>
      </div>
      <div class="w-full"><%= @user.notes %></div>
    </div>
  </div>
</div>