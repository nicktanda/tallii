<div class="bg-white flex w-full h-[85vh]">
  <div class="w-[30vw] bg-gray-200 p-4">
    <div class="font-bold text-xl">Customers</div>
    <div class="space-y-4 py-4">
      <% @users.each do |user| %>
        <%= link_to desktop_user_path(user) do %>
          <div class="hover:bg-white p-2 rounded-lg flex items-center space-x-4">
            <% if user.images&.order(:created_at)&.first&.image.present? %>
              <img src="<%= url_for(user.images.order(:created_at).first.image) %>" alt="<%= user.first_name %>" class="bg-green-500 rounded-full max-h-8 max-w-8">
            <% end %>
            <span><%= user.full_name %></span>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="w-full p-4 flex items-center justify-center">
    <div class="text-center">
      <div class="w-full flex justify-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-24 h-24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
        </svg>
      </div>
      <div class="text-2xl">Select A Customer To Inspect</div>
    </div>
  </div>
</div>