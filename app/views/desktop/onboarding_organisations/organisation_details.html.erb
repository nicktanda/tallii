<% flash.each do |type, msg| %>
  <div class="text-red-500 border-red-500 w-full p-2 border-2 rounded-lg">
    <%= msg %>
  </div>
<% end %>
<div class="flex w-full h-screen text-blue-900">
  <div class="w-1/3 bg-blue-300 p-8 space-y-4">
    <div class="flex">
      <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" viewBox="0 0 60 60" fill="currentColor" class="h-8 w-8">
        <rect x="33" y="20" width="10" height="30" rx="1" />
        <ellipse cx="23" cy="12" rx="6" ry="5" />
        <ellipse cx="38" cy="12" rx="6" ry="5" />
        <path fill-rule="evenodd" clip-rule="evenodd" d="M19 20C18.4477 20 18 20.4477 18 21V37.5663L28 31.3176V21C28 20.4477 27.5523 20 27 20H19ZM28 37.2135L18 43.4622V49C18 49.5523 18.4477 50 19 50H27C27.5523 50 28 49.5523 28 49V37.2135Z" />
      </svg>
      <div class="text-2xl font-bold">Talii</div>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 text-white bg-blue-900 rounded-full p-1">
      <path stroke-linecap="round" stroke-linejoin="round" d="M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0ZM3 19.235v-.11a6.375 6.375 0 0 1 12.75 0v.109A12.318 12.318 0 0 1 9.374 21c-2.331 0-4.512-.645-6.374-1.766Z" />
    </svg>
    <div class="text-xl font-bold">Create your account in a few clicks</div>
    <div class="flex items-start">
      <div class="grid grid-cols-3 items-center gap-x-4">
        <!-- First Circle -->
        <div class="col-span-1 flex justify-center">
          <div class="w-16 h-16 bg-blue-300 text-blue-900 border-blue-900 border-4 flex items-center justify-center rounded-full text-xl font-bold">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="4" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
            </svg>
          </div>
        </div>
        <!-- First Circle Text -->
        <div class="col-span-2">
          <div class="text-lg font-bold text-blue-900">Sign up</div>
        </div>

        <!-- Vertical Line -->
        <div class="col-span-1 flex justify-center">
          <div class="h-12 w-1 bg-blue-900"></div>
        </div>
        <div class="col-span-2"></div> <!-- Empty space for alignment -->

        <!-- Second Circle -->
        <div class="col-span-1 flex justify-center">
          <div class="w-16 h-16 bg-blue-300 text-blue-900 border-blue-900 border-4 flex items-center justify-center rounded-full text-xl font-bold">
            2
          </div>
        </div>
        <!-- Second Circle Text -->
        <div class="col-span-2">
          <div class="text-lg font-bold text-blue-900">Basic Information</div>
        </div>
      </div>
    </div>
    <div class="font-bold pt-4"><%= @onboarding_organisation.email %></div>
    <div class="flex space-x-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6a2.25 2.25 0 0 0-2.25 2.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15m3 0 3-3m0 0-3-3m3 3H9" />
      </svg>
      <div class="">Exit sign up</div>
    </div>
  </div>
  <div class="w-2/3 p-12">
    <div class="mt-16 flex justify-center w-full">
      <%= form_with url: update_desktop_onboarding_organisation_complete_path, class: "w-4/5" do |f| %>
        <div class="space-y-4 w-full">
          <div class="flex justify-center text-3xl font-bold">Let's get started</div>
          <div class="space-y-3 w-full">
            <%= f.text_field :name, placeholder: "Company name", required: true, class: "bg-white text-black w-full rounded-xl p-4" %>
            <div class="text-xs text-blue-700 px-2">This is what we'll use for invoices</div>
          </div>
          <div class="space-y-3 w-full">
            <%= f.text_field :country, placeholder: "Country", required: true, class: "bg-white text-black w-full rounded-xl p-4" %>
            <div class="text-xs text-blue-700 px-2">Where your company is legally based</div>
          </div>
          <div class="flex justify-center">
            <%= f.submit "Continue", class: "bg-blue-800 text-white font-bold p-4 px-12 rounded-3xl flex items-center justify-center" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>