<div class="text-center m-8 text-white">
  <div class="flex space-x-8">
    <%= link_to current_pet_profile_path, class: "pt-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
      </svg>
    <% end %>
    <div class="text-white text-4xl font-thin pt-2 pb-4"><%= @pet.name %>'s Photo Gallery</div>
  </div>
  <%= form_with url: upload_new_image_path(@pet) do |f| %>
    <div class="my-4">
      <%= f.file_field :image, id: 'file-input3', class: 'hidden', accept: 'image/jpeg,image/png,image/gif,image/webp' %>
    </div>
    <%= button_tag type: 'submit', class: 'w-full px-4 py-4' do %>
      <div class="w-full flex justify-center items-center space-x-2 border rounded-2xl text-center py-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        <div class="font-light">Upload New Photos</div>
      </div>
    <% end %>
  <% end %>
  <div class="space-y-12">
    <% @images.each do |image| %>
      <img src="<%= url_for(image.image) %>" alt="<%= @pet.name %>" class="rounded-2xl max-h-80 w-full flex flex-col justify-end">
    <% end %>
  </div>
<div>
<script>
  document.getElementById('file-input3').removeAttribute('accept');
</script>