<style>
  .input-label {
    position: absolute;
    right: 4px;
    top: 50%; /* Center vertically */
    transform: translateY(-50%); /* Center adjustment */
    transition: transform 0.2s ease, top 0.2s ease;
    color: #FEF08A; /* Change color to match your design */
    pointer-events: none; /* Prevent pointer events on label */
    font-size: 24px;
  }

  /* Slider Track with Text */
  .slider-container {
    position: absolute; /* Change position to absolute */
    bottom: 20px; /* Position from the bottom of the viewport */
    left: 50%; /* Center horizontally */
    transform: translateX(-50%); /* Centering correction */
    width: 100%; /* Full width */
    max-width: 500px; /* Max width */
  }

  /* Hide default appearance of the slider */
  .slider {
    -webkit-appearance: none;
    appearance: none;
    width: 100%;
    height: 10px;
    background: transparent; /* Make native track transparent */
    outline: none;
    position: relative;
  }

  /* Text Background for the slider track */
  .slider::before {
    content: "(And again) - - - >";
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.75rem;
    color: #666;
    pointer-events: none;
    width: 100%;
    text-align: right;
    line-height: 10px;
    z-index: -1; /* Ensures it appears below the slider thumb */
  }

  /* Slider thumb with an image */
  .slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 96px;
    height: 96px;
    background: url('/icons/logo.png') no-repeat center center;
    background-size: contain;
    cursor: pointer;
  }

  .slider::-moz-range-thumb {
    width: 96px;
    height: 96px;
    background: url('/icons/logo.png') no-repeat center center;
    background-size: contain;
    cursor: pointer;
  }
</style>

<div class="m-2">
  <%= form_with url: update_pet_breed_onboarding_path(@pet), id: "petBreedForm" do |f| %>
    <div class="text-center mb-8 mt-12">
      <div class="text-yellow-200 text-4xl">Breed</div>
      <div class="text-gray-400 text-2xl mt-4">Tell us about <%= @pet.name %>'s breed</div>
    </div>
    <div class="w-full mb-4 mt-24 px-12">
      <%= f.text_field :breed, required: true, class: "bg-black border-x-0 border-t-0 border-2 border-yellow-200 text-white text-4xl p-4 font-bold w-full" %>
    </div>
    <div class="slider-container mt-32 px-8">
      <input type="range" min="1" max="100" value="1" class="slider" id="myRange">
      <div class="mt-12 flex space-x-1 mx-12">
        <div class="w-full h-1 bg-yellow-200"></div>
        <div class="w-full h-1 bg-yellow-200"></div>
        <div class="w-full h-1 bg-yellow-200"></div>
        <div class="w-full h-1 bg-yellow-200"></div>
        <div class="w-full h-1 bg-yellow-200"></div>
        <div class="w-full h-1 bg-yellow-200"></div>
        <div class="w-full h-1 bg-gray-400"></div>
      </div>
    </div>
  <% end %>
</div>

<script>
  var slider = document.getElementById("myRange");
  var form = document.getElementById("petBreedForm");

  slider.oninput = function() {
    if (this.value == this.max) {
      // Submit the form when the slider reaches the max value
      form.submit();
    }
  }
</script>