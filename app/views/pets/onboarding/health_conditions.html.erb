<div class="m-2">
  <%= form_with url: update_pet_health_conditions_onboarding_path(@pet) do |f| %>
    <div class="text-center mb-8">
      <div class="text-yellow-200 text-4xl">Health</div>
      <div class="text-white text-2xl mt-4">Does <%= @pet.name %> have any health problems?</div>
    </div>
    <div class="w-full mb-4">
      <%= f.label :health_conditions, "Share health history", class: "block text-xl font-semibold mb-2 text-yellow-200" %>
      <%= f.text_area :health_conditions, required: true, class: "bg-black border-2 border-yellow-200 rounded-2xl text-white text-2xl p-4 font-bold w-full" %>
    </div>
    <%= f.submit "Next!", class: "mt-2 text-white text-4xl underline" %>
  <% end %>
</div>