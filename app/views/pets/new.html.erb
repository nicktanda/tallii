<% if flash[:alert].present? -%>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end -%>
<%= form_for Pet.new, url: create_pet_path do |f| %>
  <div class="text-center m-8 text-white">
    <div class="font-bold text-3xl mb-4">Create your pet's profile!</div>
    <div class="font-light mb-16">Please enter your pet's details below</div>
    <div class="space-y-12 text-left">
      <div>
        <%= f.label :name, class: "text-xl" %>
        <%= f.text_field :name, class: "bg-black text-white border-x-0 border-t-0 w-full text-xl" %>
      </div>
      <div>
        <%= f.label :gender, class: "text-xl" %>
        <div class="flex space-x-4">
          <label for="option1" class="flex-1">
            <input type="radio" name="attribute_name" id="option1" value="0" class="hidden">
            <div class="bg-blue-500 text-white text-center rounded-md pt-16 pb-4 px-4 cursor-pointer transition duration-300 hover:bg-blue-600">Boy</div>
          </label>

          <label for="option2" class="flex-1">
            <input type="radio" name="attribute_name" id="option2" value="1" class="hidden">
            <div class="bg-red-500 text-white text-center rounded-md pt-16 pb-4 px-4 cursor-pointer transition duration-300 hover:bg-blue-600">Girl</div>
          </label>
        </div>
      </div>
      <div>
        <%= f.label :breed %>
      </div>
      <div>
        <%= f.label :dob, "Birthday" %>
      </div>
      <div>
        <%= f.label :weight %>
      </div>
      <div>
        <%= f.label :breed %>
      </div>
      <div>
        <%= f.label :health_conditions, "Health" %>
      </div>
    </div>
  </div>
<% end -%>