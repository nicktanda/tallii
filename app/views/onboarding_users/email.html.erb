<div class="w-full p-4 text-white text-center space-y-8 px-8">
  <%= form_with url: update_user_email_onboarding_path(@user) do |f| %>
    <div class="space-y-56">
      <div class="space-y-4">
        <div class="flex justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" viewBox="0 0 60 60" fill="none">
            <circle cx="30" cy="30" r="29.5" stroke="white"/>
            <rect x="33" y="20" width="10" height="30" rx="1" fill="white"/>
            <ellipse cx="23" cy="12" rx="6" ry="5" fill="white"/>
            <ellipse cx="38" cy="12" rx="6" ry="5" fill="white"/>
            <path fill-rule="evenodd" clip-rule="evenodd" d="M19 20C18.4477 20 18 20.4477 18 21V37.5663L28 31.3176V21C28 20.4477 27.5523 20 27 20H19ZM28 37.2135L18 43.4622V49C18 49.5523 18.4477 50 19 50H27C27.5523 50 28 49.5523 28 49V37.2135Z" fill="white"/>
          </svg>
        </div>
        <div class="text-4xl">Create Account</div>
      </div>
      <div class="space-y-8">
        <div>Hello you beautiful pet owner! Please enter your email below</div>
        <%= f.email_field :email, value: @user.email, required: true, placeholder: "Bow.wow@gmail.com", class: "bg-black border-2 border-white rounded-2xl text-white text-lg p-4 w-full" %>
      </div>
      <div class="space-y-4">
        <%= f.submit "Next", class: "w-full bg-blue-800 p-4 rounded-lg" %>
        <div class="text-sm">Already have an account? <%= link_to "Log in", new_session_path, class: "font-bold" %></div>
      </div>
    </div>
  <% end %>
</div>