    </svg>
    <div class="text-yellow-200 text-3xl">Book a Daycare Visit</div>
  </div>
  <div class="text-2xl">Remember</div>
  <div class="font-light">Review details before confirming request, please and thank you!</div>
  <div class="w-full pt-4 space-y-4">
    <%= link_to new_daycare_visits_path do %>
      <div class="border-white border-2 w-full text-xl rounded-lg p-4 flex items-center space-x-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 rounded-lg border-2 border-white p-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        <div class="text-center text-2xl">Book a daycare visit</div>
      </div>
    <% end %>
  </div>
  <% if @daycare_visits.any? %>
    <div class="space-y-4 pt-4 text-black font-bold">
      <div class="text-white text-2xl">Pending Requests</div>
      <% @daycare_visits.pending.each do |daycare_visit| %>
        <% pet = daycare_visit.pet %>
        <details class="w-full bg-yellow-200 rounded-lg p-4">
          <summary>
            <div class="pl-2 inline-flex items-center gap-4 cursor-pointer">
            <div><%= daycare_visit.date.strftime("%B %d") %></div>
            <div><%= daycare_visit.time.strftime("%I:%M %p") %></div>
            <div><%= pet.name %></div>
          </summary>
          <p class="mt-2">
            <div>Status: <%= daycare_visit.formatted_status %></div>
            <div>Duration: <%= daycare_visit.formatted_duration %></div>
            <div>Notes: <%= daycare_visit.notes %></div>
            <div class="flex space-x-4 pt-2">
              <%= link_to daycare_visit_path(daycare_visit), class: "flex border-black border-2 p-1 rounded-lg" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 p-0.5 rounded-lg">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                </svg>
                <div>Edit</div>
              <% end %>
              <%= button_to delete_daycare_visits_path(daycare_visit), method: :delete, class: "flex border-black border-2 p-1 rounded-lg" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 p-0.5 rounded-lg">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                </svg>
                <div>Delete</div>
              <% end %>
            </div>
          </p>
        </details>
      <% end %>
      <div class="text-white text-2xl">Confirmed Requests</div>
      <% @daycare_visits.confirmed.each do |daycare_visit| %>
        <% pet = daycare_visit.pet %>
        <details class="w-full bg-yellow-200 rounded-lg p-4">
          <summary>
            <div class="pl-2 inline-flex items-center gap-4 cursor-pointer">
            <div><%= daycare_visit.date.strftime("%B %d") %></div>
            <div><%= daycare_visit.time.strftime("%I:%M %p") %></div>
            <div><%= pet.name %></div>
          </summary>
          <p class="mt-2">
            <div>Status: <%= daycare_visit.formatted_status %></div>
            <div>Duration: <%= daycare_visit.formatted_duration %></div>
            <div>Notes: <%= daycare_visit.notes %></div>
            <div class="flex space-x-4 pt-2">
              <%= link_to daycare_visit_path(daycare_visit), class: "flex border-black border-2 p-1 rounded-lg" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 p-0.5 rounded-lg">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                </svg>
                <div>Edit</div>
              <% end %>
              <%= button_to delete_daycare_visits_path(daycare_visit), method: :delete, class: "flex border-black border-2 p-1 rounded-lg" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 p-0.5 rounded-lg">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                </svg>
                <div>Delete</div>
              <% end %>
            </div>
          </p>
        </details>
      <% end %>
    </div>
  <% end %>
</div>