<% if flash[:alert].present? -%>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end -%>

<%= form_for User.new, url: create_user_path do |f| %>
  <div class="text-center m-8 text-white">
    <div class="font-bold text-3xl mb-4">Create Account</div>
    <div class="font-light mb-16">Hello you beautiful pet owner! Please enter your details below or login</div>
    <div class="space-y-12 mb-16">
      <%= f.text_field :first_name, placeholder: "First Name", class: "bg-black text-white border-x-0 border-t-0 w-full text-xl" %>
      <%= f.text_field :last_name, placeholder: "Last Name", class: "bg-black text-white border-x-0 border-t-0 w-full text-xl" %>
      <%= f.email_field :email, placeholder: "Email", class: "bg-black text-white border-x-0 border-t-0 w-full text-xl" %>
      <%= f.password_field :password, placeholder: "Password", class: "bg-black text-white border-x-0 border-t-0 w-full text-xl" %>
    </div>
    <%= f.submit "Create Account", class: "bg-white w-full text-black font-bold p-4 rounded-lg" %>
    <div class="mt-8 flex space-x-4 justify-center">
      <div class="font-light">Already a member?</div>
      <%= link_to "Log in", new_session_path, class: "text-white font-bold underline" %>
    </div>
  </div>
<% end %>